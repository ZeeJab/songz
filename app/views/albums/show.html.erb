<div id="container">
	<div id="albums" class="generic-box">		

    <div class = "album_info_container clearfix"> 
      <div class = "album_album_photo"><%= image_tag @album.photo.thumb.url %></div><!-- .album_album_photo -->
      <div class = "album_side_info">
        <div class = "album_title"><%= link_to @album.artist.name, artist_path(@album.artist) %></div><!-- .album_title -->
        <div class = "album_album"><%= @album.name %></div><!-- .album_title -->
        <% if @album.songs.any? %>
          <ul class="album_songs">
            <% @album.songs.each do |song| %>
              <li><%= link_to song.name, song_path(song) %></li>
            <% end %> 
        <% end %>
        <br>
        <div><span class="infomatics"><%= link_to "Edit Album", edit_album_path(@album) %> | <%= link_to "Delete Album", album_path(@album), :method => :delete, :confirm => "Are you sure?" %> </span></div>
      </div><!-- .album_album_info -->

    </div><!-- .album_info_container -->

	</div><!-- #albums -->
</div><!-- #container --> 



